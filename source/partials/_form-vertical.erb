<section id="form-container">
    <div class="container">
      <div class="row no-gutters justify-content-center">
        <div class="col-12 col-lg-5">
          <div class="form-wrapper">

            <!--Start Form Code-->
            <form id="kapostmktoform" name="kapostmktoform" action="http://app-sj08.marketo.com/index.php/leadCapture/save" method="POST" target="_parent">
            <input type="hidden" name="munchkinId" value="389-IOX-111">
            <input type="hidden" name="formid" value="${mkto-form-id}">
            <input type="hidden" name="returnLPId" value="-1"> <!--What does this do?-->
            <input type="hidden" name="_mkt_trk" value=""> <!--Munchkin passes value into this field-->
            <input type="hidden" id="leadSourceMostRecent" name="Lead_Source_Most_Recent__c" value="${mkto-form-lead-source-most-recent}"> <!-- Lead Source (Most Recent) -->
            <input type="hidden" id="referralSourceMostRecent" name="Referral_Source_Most_Recent__c" value="Unknown"> <!-- Referral Source (Most Recent) -->
            <input type="hidden" id="searchPlatformMostRecent" name="Search_Platform_Most_Recent__c" value="Unknown"> <!-- Search Platform (Most Recent) -->
            <input type="hidden" id="socialNetworkMostRecent" name="Social_Network_Most_Recent__c" value="Unknown"> <!-- Social Network (Most Recent) -->
            <input type="hidden" id="paidServiceMostRecent" name="Paid_Service_Most_Recent__c" value="Unknown"> <!-- Paid Service (Most Recent) -->
            <input type="hidden" id="campaignPageURL" name="Campaign_Page_URL__c" value=""> <!-- Campaign Page URL -->
            <input type="hidden" id="campaignPageURLReferrer" name="Campaign_Page_URL_Referrer__c" value=""> <!-- Campaign Page URL (Referrer) -->
            <!--<input type="hidden" name="Hand_Raise_Most_Recent__c" value="Demo Request Form">--> <!-- Hand Raise Only -->
            <!--<input type="hidden" name="Hand_Raised__c" value="true">--> <!-- Hand Raise Only -->
            <!--<input type="hidden" name="ret" value="${mkto-form-redirect}" />-->
            <input type="hidden" name="ret" value="http://deathsvertigo.com" />

            <div id="form-reset" class="row" style="display: none;">
              <div class="col-12 text-center">
                <p style="line-height: 18px; font-size: 12px;">Not you? <a href="#formReset" id="formReset">Reset form</a>.</p>
              </div>
            </div>

            <div class="row"> <!-- Start field row -->

              <div class="form-group form-padding col-12">
              <!--First Name-->
                <label class="col-form-label float-label" for="FirstName">First Name</label>
                <input id="FirstName" name="FirstName"  type="text" class="form-control" placeholder="First Name" value="">
              </div>

              <div class="form-group form-padding col-12">
              <!--Last Name-->
                <label class="col-form-label float-label" for="LastName">Last Name</label>
                <input id="LastName" name="LastName"  type="text" class="form-control" placeholder="Last Name" value="">
              </div>

              <div class="form-group form-padding col-12">
              <!--Email Address-->
                <label class="col-form-label float-label"  for="Email">Email Address</label>
                <input id="Email" name="Email" data-validation="email" type="text" class="form-control" placeholder="Email Address" value="">
              </div>

              <div class="form-group form-padding col-12">
              <!--Phone Number-->
                <label class="col-form-label float-label" for="Phone">Phone Number</label>
                <input id="Phone" name="Phone"  type="text" class="form-control" placeholder="Phone Number" value="">
              </div>

              <div class="form-group form-padding col-12">
              <!--Company Name-->
                <label class="col-form-label float-label" for="Company">Company</label>
                <input id="Company" name="Company"  type="text" class="form-control" placeholder="Company Name" value="">
              </div>

              <div class="form-group form-padding col-12 float-label ">
                <!--Country-->
                <label class="col-form-label float-label" for="Marketing_Country__c">Country</label>
                <select id="Marketing_Country__c" name="Marketing_Country__c" class="form-control ">
                  <option value="" selected>Country...</option>
                  <option value="Australia" >Australia</option>
                  <option value="Canada" >Canada</option>
                  <option value="Germany" >Germany</option>
                  <option value="United States" >United States</option>
                </select>
              </div>

              <div class="form-group form-padding col-12">
                <!--Title Category-->
                <label class="col-form-label float-label" for="Title_Category__c">Title Category</label>
                <select id="Title_Category__c" name="Title_Category__c" class="form-control">
                  <option value="" selected>Title Category...</option>
                  <option value="C-Level" >C-Level</option>
                  <option value="Executive" >Executive</option>
                  <option value="Director" >Director</option>
                  <option value="Manager" >Manager</option>
                  <option value="Specialist or Associate" >Specialist or Associate</option>
                  <option value="Agency or Consultant" >Agency or Consultant</option>
                  <option value="Other" >Other</option>
                </select>
              </div>

              <div class="form-group form-padding col-12">
                <!--Department-->
                <label class="col-form-label float-label" for="Department">Department</label>
                <select id="Department" name="Department" onChange="populateJobRoleOptions();" class="form-control">
                  <option value="" selected>Department...</option>
                  <option value="Accounting" >Accounting</option>
                  <option value="Administration" >Administration</option>
                  <option value="Customer Service" >Customer Service</option>
                  <option value="Engineering" >Engineering</option>
                  <option value="Finance" >Finance</option>
                  <option value="Human Resources" >Human Resources</option>
                  <option value="Information Technology" >Information Technology</option>
                  <option value="Legal" >Legal</option>
                  <option value="Marketing" >Marketing</option>
                  <option value="Product" >Product</option>
                  <option value="Purchasing" >Purchasing</option>
                  <option value="Research and Development" >Research and Development</option>
                  <option value="Sales" >Sales</option>
                  <option value="Other" >Other</option>
                </select>
              </div>

              <div class="form-group form-padding col-12">
                <!--Job Role-->
                <label class="col-form-label float-label" for="Job_Role__c">Job Role</label>
                <select id="Job_Role__c" name="Job_Role__c" class="form-control" size="1">
                  <option value="" selected>Job Role...</option>
                </select>
              </div>


              <div class="form-group form-padding col-12">
                <!--Marketing Automation-->
                <label class="col-form-label float-label" for="Marketing_Automation__c">Marketing Automation</label>
                <select id="Marketing_Automation__c" name="Marketing_Automation__c" class="form-control">
                  <option value="" selected>Marketing Automation...</option>
                  <option value="Act-On" >Act-On</option>
                  <option value="Adobe" >Adobe</option>
                  <option value="Eloqua" >Eloqua</option>
                  <option value="ExactTarget" >ExactTarget</option>
                  <option value="Hubspot" >Hubspot</option>
                  <option value="Marketo" >Marketo</option>
                  <option value="Pardot" >Pardot</option>
                  <option value="Silverpop" >Silverpop</option>
                  <option value="Other" >Other</option>
                  <option value="None" >None</option>
                  <option value="I don't know" >I don't know</option>
                </select>
              </div>

              <div class="form-group form-padding col-12">
                <!--Business Type-->
                <label class="col-form-label float-label" for="Business_Type__c">Business Type</label>
                <select id="Business_Type__c" name="Business_Type__c" class="form-control">
                  <option selected="selected" value="">Business Type...</option>
                  <option value="B2B">B2B</option>
                  <option value="B2C">B2C</option>
                  <option value="Other">Other</option>
                </select>
              </div>

              <!--Contact Sales Message-->
              <div id="textarea-wrapper" class="form-group col-12" style="display: ${mkto-form-comment};">
                <label class="col-form-label float-label" for="Contact_Sales_Message__c">Message (Optional)</label>
                <textarea id="Contact_Sales_Message__c" name="Contact_Sales_Message__c" class="form-control" placeholder="Message (Optional)"  rows="3"></textarea>
              </div>

              <!--Newsletter-->
              <div id="newsletter-wrapper" class="form-group col-12" style="display: none;">
                <div class="form-check">
                  <label class="checkbox">
                    <input id="Subscribed_to_Newsletter__c" name="Subscribed_to_Newsletter__c"  type="checkbox">
                    <span class="checkbox-option" style="font-weight: 700;">The Content Marketeer</span>
                  </label>
                  <p class="checkbox-description">Subscribe to our weekly newsletter and get fresh insights, stories, data and best practices delivered right to your inbox.</span>
                </div>
              </div>


            </div> <!--End Field Row-->

            <div class="row justify-content-center">
              <div class="col-12">
                <div id="validation-error-above-submit"></div>
              </div>
            </div>

            <!--Submit Button-->
            <div class="row justify-content-center">
              <div class="col-12">
                <button name="kapostmktoform" type="submit" class="btn btn-block">${mkto-form-button-copy}</button>
              </div>
            </div>

            <!--LEGAL STATEMENT-->
            <div class="row">
              <div class="col-12">


                <div id="privacy-statement"><!--<h5>Terms of Service</h5>-->

                  <div id="privacy-statement-checkbox">

                    <input id="legalCheckbox" name="legalCheckbox" type="checkbox">

                    <span class="privacy-statement">By submitting this form, I acknowledge and agree to the storing and processing of my personal data by Kapost as described in their <a href="https://kapost.com/privacy-policy/" target="_blank">Privacy Policy</a>, as well as Kapost's use of my contact information to communicate with me regarding Kapost's products, services, and events. I may unsubscribe at any time.</span>

                  </div>


                </div>

              </div>
            </div>


          </form>

          <%= partial "partials/form-js-below" %>



        </div>
      </div>
    </div>
  </div>
</section>
