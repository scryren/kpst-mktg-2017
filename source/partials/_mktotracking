<!--Begin Marketo Form customization-->
<script>

var refSourceFormValue;
var searchFormValue;
var socialFormValue;
var paidSource;

function cookiesHiddenFields () {

//Note: "Cookies" is the name of a library function; don't change it.

  //PART 1a: Set Search Engine Source in a Cookie and store the Cookie value in variable
  if (searchSource != null) {
    Cookies.set('kapostsearch', searchSource, { domain: 'kapost.com' }); //Set Cookie
    searchFormValue =  Cookies.get('kapostsearch', { domain: 'kapost.com' }); //Store cookie value in variable
  } else {
    searchFormValue =  Cookies.get('kapostsearch', { domain: 'kapost.com' }); //Store cookie value in variable
  }

  //PART 2a: Set Social Source in a Cookie and store the Cookie value in variable
  if (socialSource != null) {
    Cookies.set('kapostsocial', socialSource, { domain: 'kapost.com' }); //Set Cookie
    socialFormValue =  Cookies.get('kapostsocial', { domain: 'kapost.com' }); //Store cookie value in variable
  } else {
    socialFormValue =  Cookies.get('kapostsocial', { domain: 'kapost.com' }); //Store cookie value in variable
  }

  //PART 3a: Set Paid Source in a Cookie and store the Cookie value in variable
  if (paidSource != null) {
    Cookies.set('kapostpaid', paidSource, { domain: 'kapost.com' }); //Set Cookie
    paidFormValue =  Cookies.get('kapostpaid', { domain: 'kapost.com' }); //Store cookie value in variable
  } else {
    paidFormValue =  Cookies.get('kapostpaid', { domain: 'kapost.com' }); //Store cookie value in variable
  }

  //PART 4a: Set Referral Source in a Cookie and store the Cookie value in variable
  if (refSource != null) {
    Cookies.set('kapostsource', refSource, { domain: 'kapost.com' }); //Set Cookie
    refSourceFormValue =  Cookies.get('kapostsource', { domain: 'kapost.com' }); //Store cookie value to variable
  }

  //PART 1b: Push Search Engine Source into form field
  if (searchFormValue != null) {
    document.getElementById("searchPlatformMostRecent").value = searchFormValue;
  }

  //PART 2b: Push Social Source into form field
  if (socialFormValue != null) {
    document.getElementById("socialNetworkMostRecent").value = socialFormValue;
  }

  //PART 3b: Push Social Source into form field
  if (paidFormValue != null) {
    document.getElementById("paidServiceMostRecent").value = paidFormValue;
  }

  //PART 4a: Set Referral Source in a Cookie and store the Cookie value in variable
  if (refSource != null) {
    document.getElementById("referralSourceMostRecent").value = refSourceFormValue;
  } else {
    refSourceFormValue =  'Unknown'; //Store cookie value to variable
    document.getElementById("referralSourceMostRecent").value = refSourceFormValue;
  }

  //PART 5: Push additional fields into form fields
  document.getElementById("campaignPageURL").value = document.location.href;
  document.getElementById("campaignPageURLReferrer").value = document.referrer;

}
</script>


