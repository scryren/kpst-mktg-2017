---
title: Kapost
layout: layout-ebook
---

<div id="title" class="container-fluid">
  <div class="container">
    <div class="row text-center">
      <div class="col-12">
        <h1>${mkto-header-copy}</h1>
      </div>
    </div>
  </div>
</div>

<div id="content-summary" class="container-fluid" >
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-5 text-center">
          <img src="${mkto-img-main}" class="img-fluid">
      </div>
      <div class="col-10 col-lg-6 col-xl-6 mx-auto mt-5 align-self-center">

        ${mkto-summary-copy}

        <a href="#kapostmktoform"><button type="button" class="btn btn-primary">${mkto-summary-button}</button></a>

      </div>
    </div>
  </div>
</div>


<div id="content" class="container-fluid">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-9">
        ${mkto-content-copy}
      </div>
    </div>
  </div>
</div>


<div id="form-topper" class="container-fluid" >
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <img src="http://resources.kapost.com/rs/389-IOX-111/images/kpst-icon-small-research-170x170.png" class="img-fluid" style="max-height: 100px;">
        <h4>Download this content!</h4>
      </div>
    </div>
  </div>
</div>

<div id="form-wrapper" class="container-fluid">
  <div class="container">
    <section id="form-container">
      <div class="row no-gutters justify-content-center">
        <div class="col-12 col-lg-6 col-xl-5">
          <%= partial "partials/form-vertical" %>
        </div>
      </div>
    </section>
  </div>
</div>
